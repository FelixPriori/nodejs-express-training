<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (products.length > 0) { %>
                <h1>Cart</h1>
                <div class="grid">
                    <% products.forEach(({productData, qty}) => {%>
                            <article class="card product-item">
                                <header class="card__header">
                                    <h1 class="product__title">
                                        <%= productData.title %>
                                    </h1>
                                </header>
                                <div class="card__image">
                                    <img 
                                        height="320px"
                                        width="280px"
                                        src="<%= productData.imageUrl %>"
                                        alt="<%= productData.title %>"
                                    >
                                </div>
                                <div class="card__content">
                                    <h2 class="product__price">$
                                        <%= productData.price %>
                                    </h2>
                                    <h3 class="product__price">
                                        Quantity: <%= qty %>
                                    </h3>
                                    <p class="product__description">
                                        <%= productData.description %>
                                    </p>
                                </div>
                                <div class="card__actions">
                                    <a href="/products/<%= productData.id %>" class="btn">Details</a>
                                    <form action="/cart-delete-product" method="post">
                                        <input type="hidden" name="productId" value="<%= productData.id %>" />
                                        <button class="btn" type="submit">Remove from cart</button>
                                    </form>
                                </div>
                            </article>
                    <% }) %>
                </div>
            <% } else { %>
                <h1>No Products in Cart!</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>